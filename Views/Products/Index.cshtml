@model IEnumerable<ModelNTQ.Models.Product>
@*<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />*@

<div class="product" style="padding:70px">
    <h2> SẢN PHẨM</h2>
    @using (Html.BeginForm())
    {
        <p>
            Tìm mặt hàng:@Html.TextBox("searchString"@*, ViewBag.CurrentFilter as string*@)
            <input type="submit" value="Tìm" />
        </p>
        <div>
            <label>
                <input type="checkbox" name="trending" value="true" />
                Show Trending Products
            </label>
            <button type="submit">Filter</button>
        </div>

    }
  
    <table class="table">
        <tr>
            <th>
                CategoryID
            </th>
            <th>
                ShopId
            </th>
            <th>
                Slug
            </th>
            <th>
                Detail
            </th>
            <th>
                Image
            </th>
            <th>
                Trending
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.ActionLink("NumberViews", "Index", new { sortOrder = ViewBag.sortByViews @*, currentFilter = ViewBag.CurrentFilter*@ })

            </th>
            <th>
                Price
            </th>
            <th>
                CreatedAt
            </th>
            <th>
                UpdatedAt
            </th>
            <th>
                DeletedAt
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShopID)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @{
                        string ImagePath = "~/Images/Image/" + item.Image;
                    }
                    <img src="@Url.Content(ImagePath)" width="70" class="img-thumbnail" />
                    <br />
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trending)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberViews)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeletedAt)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    @*Trang @(Model.PageCount < Model.PageNumber ? 0: Model.PageNumber)/ @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", 
    new { page,sortOrder=ViewBag.CurrentSort,currentFilter=ViewBag.CurrentFilter }))*@
</div>

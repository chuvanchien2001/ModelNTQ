@model IEnumerable<ModelNTQ.Models.User>

<div class="user" style="padding:90px">
    @using (Html.BeginForm())
    {
        <p>
            Tìm mặt hàng:@Html.TextBox("searchName"@*, ViewBag.CurrentFilter as string*@)
            <input type="submit" value="Tìm" />
        </p>
    }
    <table class="table">
        <tr>
            <th>
                UserName
            </th>
            <th>
                PassWord
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.ActionLink("CreatedAt", "Index", new
                {
                    sortOrder = ViewBag.sortByTimeCreated@*, currentFilter = ViewBag.CurrentFilter*@})
            </th>
            <th>
                DeletedAt
            </th>
            <th>
                UpdatedAt
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeletedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>